{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "webworker"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@config": ["./config"],
      "@graphql": ["./graphql"],
      "@loaders": ["./loaders"],
      "@models": ["./models"],
      "@routes": ["./routes"],
      "@utils": ["./utils"]
    },
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["**/*.ts"]
}
